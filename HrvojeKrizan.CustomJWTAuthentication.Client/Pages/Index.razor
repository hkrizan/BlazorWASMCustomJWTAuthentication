@page "/"
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <NotAuthorized>
        <h1>NOT AUTHORIZED!!!!</h1>
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="@UserRoles.Admin">
    <p>This is visible by "@UserRoles.Admin" role only</p>
</AuthorizeView>

<AuthorizeView Roles="@UserRoles.User">
    <p>This is visible by "@UserRoles.User" role only</p>
</AuthorizeView>

<AuthorizeView Policy="@RoleClaims.SuperAdmin">
    <p>This is visible if role or user has "@RoleClaims.SuperAdmin" claim</p>
</AuthorizeView>

<AuthorizeView Policy="@RoleClaims.SpecialPermissions">
    <p>This is visible if role or user has "@RoleClaims.SpecialPermissions" claim</p>
</AuthorizeView>